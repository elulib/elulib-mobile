{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "élulib",
  "version": "0.1.0",
  "identifier": "com.elulib.mobile",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "https://app.elulib.com",
    "frontendDist": "https://app.elulib.com"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self' https://app.elulib.com; script-src 'self' https://app.elulib.com; style-src 'self' https://app.elulib.com 'unsafe-inline'; img-src 'self' https://app.elulib.com data:; font-src 'self' https://app.elulib.com data:; connect-src 'self' https://app.elulib.com;"
    },
    "windows": [
      {
        "title": "élulib",
        "url": "https://app.elulib.com",
        "fullscreen": false,
        "visible": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/ios-1024.png"
    ],
    "category": "Productivity",
    "iOS": {
      "minimumSystemVersion": "14.0"
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {}
}

